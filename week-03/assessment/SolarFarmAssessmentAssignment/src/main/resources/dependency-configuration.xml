        Controller controller = new Controller(view,service);
        controller.run();
-->

    <bean id="io" class="learn.solar.ui.ConsoleIO"/>

    <bean id ="view" class="learn.solar.ui.View">
        <constructor-arg ref="io"/>
    </bean>

    <bean id="repository" class="learn.solar.data.PanelFileRepository">
        <constructor-arg value="./data/solarpanel.csv"/>
    </bean>

    <bean id = "service" class="learn.solar.domain.PanelService">
        <constructor-arg ref="repository"/>
    </bean>

    <bean id = "controller" class="learn.solar.ui.Controller">
        <constructor-arg ref="view"/>
        <constructor-arg ref="service"/>
    </bean>








</beans>

